{
  "name": "code-simd-ai",
  "displayName": "code.simd",
  "description": "VScode plugin for porting of code between different cpu architectures",
  "version": "1.0.17",
  "publisher": "VectorCamp",
  "engines": {
    "vscode": "^1.100.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VectorCamp/code.simd.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "SIMD",
    "intrinsics",
    "highlighting",
    "VSX",
    "NEON",
    "SSE",
    "INTEL",
    "ARM",
    "AVX",
    "POWER",
    "AVX512",
    "simd.info",
    "simd.ai",
    "port",
    "architecture",
    "cpu",
    "IBM",
    "isa",
    "vectorization",
    "x86",
    "powerpc",
    "optimization",
    "low-level",
    "parallel",
    "Altivec",
    "VMX",
    "AVX2"
  ],
  "icon": "media/splash-dark.png",
  "license": "Apache-2.0",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Code SIMD ai Configuration",
      "properties": {
        "code.simd.info.apiToken": {
          "type": "string",
          "default": "",
          "description": "Your simd.info API token. Get it from https://simd.info/",
          "secret": true
        },
        "code.simd.info.enableLLVM": {
          "type": "boolean",
          "default": false,
          "description": "Enable LLVM/Clang integration for MCA analysis (requires clang and llvm-mca-21 to be installed)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-simd-ai-sidebar",
          "title": "SIMD.info",
          "icon": "media/splash-dark.png"
        }
      ]
    },
    "commands": [
      {
        "command": "code.simd.ai.showPerformanceGraph",
        "title": "Show Performance Graph",
        "category": "SIMD"
      },
      {
        "command": "code.simd.ai.cycleHighlightMode",
        "title": "Cycle SIMD Syntax Highlighting Mode"
      },
      {
      "command": "code.simd.ai.analyzeMca",
      "title": "SIMD: Analyze Selection with LLVM-MCA"
    }
  ],
  "keybindings": [
    {
      "command": "code.simd.ai.analyzeMca",
      "key": "ctrl+shift+m",
      "mac": "cmd+shift+m",
      "when": "editorTextFocus && editorHasSelection && code.simd.info.enableLLVM"
    }
  ],
  "menus": {
    "editor/context": [
      {
        "command": "code.simd.ai.analyzeMca",
        "when": "editorHasSelection && code.simd.info.enableLLVM",
        "group": "simd@1"
      }
    ]
  },
    "activationEvents": [
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "npx esbuild src/extension.ts --bundle --platform=node --outfile=dist/extension.js --external:vscode "
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "marked": "^16.1.1",
    "node-fetch": "^2.7.0"
  },
  "files": [
    "dist",
    "media",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
